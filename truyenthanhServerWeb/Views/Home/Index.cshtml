@model truyenthanhServerWeb.Models.UserToLogin
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="UserName" class="col-form-label col-md-2">Tên đăng nhập</label>
        <div class="col-md-10">
            <input type="text" asp-for="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2">Mật khẩu</label>
        <div class="col-md-10">
            <input type="password" asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-sm btn-outline-primary">Đăng nhập</button>
        </div>
    </div>
</form>

<span style="height: 25px; width: 25px; background-color: #bbb; 
        border-radius: 50%; display: inline-block;"></span>

